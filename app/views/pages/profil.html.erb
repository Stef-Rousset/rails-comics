<h1>Dashboard</h1>
<div class="dashboard-informations">
  <div class="user-informations">
    <h2>Mes informations</h2>
    <%= cl_image_tag @user.photo.key, class: 'avatar-profil' %>
    <ul>
      <li><span class="bold">Pr√©nom :</span> <%= @user.first_name.capitalize %></li>
      <li><span class="bold">Nom :</span> <%= @user.last_name.capitalize %></li>
      <li><span class="bold">Pseudo :</span> <%= @user.pseudo.capitalize %></li>
      <li><span class="bold">Email :</span> <%= @user.email %></li>
    </ul>
    <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_user_registration_path, class: 'edit-button' %>
  </div>
  <div class="all-users">
    <h2>Les membres du blog</h2>
    <ul>
     <%= render 'user' %>
    </ul>
  </div>
  <div class="follow">
    <div class="user-followers">
      <h2>Mes followers</h2>
    </div>
    <div class="user-followees">
      <h2>Mes followees</h2>

    </div>
  </div>
</div>
